{
  "manifest_version": 3,
  "name": "Proxy Manager",
  "version": "1.0",
  "description": "Manages a list of proxies and configures a local Node.js proxy relay.",
  "permissions": [
    "storage",
    "proxy",
    "notifications",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:9998/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 